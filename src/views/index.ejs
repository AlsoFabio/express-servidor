<%- include('partials/header.ejs')%>
<body>
  <div class="container">
    <div class="row m-2">
      <% tarea.forEach((task)=> { %>
      <div class="col-12 col-md-6 col-lg-4 col-xl-3 my-3">
        <div class="card">
          <img src="/img/gatito.jpg" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"><%= task.taskname %></h5>
            <p class="card-text"><%= task.description %></p>
            <button type="submit" class="btn btn-warning">Editar</button>
            <button type="submit" class="btn btn-md btn-danger" value="<%= task.id %>" onclick="eliminarTarea(event)">borrar</button>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</body>
<%- include('partials/footer.ejs') %>
